<div class="notice">
  <%= devise_error_messages! %>
</div>

<div class="devise2">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <h3 id="devise">Sign up</h3>

    <%= f.email_field :email, :placeholder => "Email", :autofocus => true %>

    <div><%= f.password_field :password, :placeholder => "Password" %></div>

    <div><%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>

    <div><%= f.submit "Sign Up", :class => 'submit2' %></div>
  <% end %>
</div>
